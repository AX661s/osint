# ============================================
# OSINT Tracker - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env file to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Configuration (Optional)
MONGO_URL=mongodb://localhost:27017/
DB_NAME=jackma_db

# SQLite is used by default (osint_tracker.db)
# No additional configuration needed for SQLite

# ============================================
# SERVER CONFIGURATION
# ============================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server Port (default: 8000)
PORT=8000

# Environment (development/production)
ENVIRONMENT=development

# ============================================
# RAPIDAPI KEYS
# ============================================
# Get your RapidAPI key from: https://rapidapi.com/

# Main RapidAPI Key (used for multiple services)
RAPIDAPI_KEY=your_rapidapi_key_here

# Caller ID API (Eyecon) - RapidAPI
# Service: https://rapidapi.com/eyecon-eyecon-default/api/caller-id2
CALLER_ID_RAPIDAPI_KEY=your_caller_id_rapidapi_key_here

# Social Media Scanner - RapidAPI
# Service: https://rapidapi.com/social-media-scanner/api/social-media-scanner
SOCIAL_MEDIA_SCANNER_KEY=your_social_media_scanner_key_here

# ============================================
# INDEPENDENT API KEYS
# ============================================

# IPQualityScore API
# Get your key from: https://www.ipqualityscore.com/
# Used for: Phone number validation and fraud detection
IPQS_API_KEY=your_ipqualityscore_api_key_here

# WhatsApp Verification API
# Get your key from: https://whatsapp-api-provider.com/
# Used for: WhatsApp number verification
WHATSAPP_API_KEY=your_whatsapp_api_key_here

# Have I Been Pwned (HIBP) API
# Get your key from: https://haveibeenpwned.com/API/Key
# Used for: Email breach detection
HIBP_API_KEY=your_hibp_api_key_here

# OSINT Industries API
# Get your key from: https://osint.industries/
# Used for: Comprehensive email OSINT
OSINT_INDUSTRIES_API_KEY=your_osint_industries_api_key_here

# Truecaller API
# Get your key from: https://developer.truecaller.com/
# Used for: Phone number lookup and caller identification
TRUECALLER_API_KEY=your_truecaller_api_key_here

# Telegram API (Optional)
# Get your credentials from: https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here

# ============================================
# SEARCH & ANALYSIS APIS
# ============================================

# SerpAPI (Google Search Results)
# Get your key from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# GHunt Configuration (Google OSINT)
# No API key needed, uses cookies authentication
# Configure through GHunt CLI tool

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
# Used for caching and session management

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# CELERY CONFIGURATION (Optional)
# ============================================
# Used for asynchronous task processing

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# SECURITY SETTINGS
# ============================================

# Session Token Secret (generate a random string)
SESSION_SECRET=your_random_secret_key_here_change_this_in_production

# Token Expiration (in hours)
SESSION_EXPIRATION_HOURS=24

# Password Hashing Rounds
BCRYPT_ROUNDS=12

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/osint_tracker.log

# ============================================
# RATE LIMITING
# ============================================

# API Rate Limits (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Query Timeout (in seconds)
QUERY_TIMEOUT=60

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable specific features
ENABLE_EMAIL_QUERIES=true
ENABLE_PHONE_QUERIES=true
ENABLE_ADMIN_PANEL=true
ENABLE_CACHING=true
ENABLE_API_LOGGING=true

# ============================================
# NOTES
# ============================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Some APIs have free tiers with limited requests
# 5. Monitor your API usage to avoid unexpected charges
